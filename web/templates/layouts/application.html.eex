    <script src="/static/assets/bower/angular/angular.js"></script>
    <script src="/static/assets/javascripts/tourPlanner.js"></script>
    <title><%= content_for(:title) || @title || "Tour Planner" %></title>
  </head>
  <body>
    <!-- nav -->
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Tour Planner</a>
        </div>
        <div class="collapse navbar-collapse">
